<!-- Hidden data for chart -->
<div id="chart-data" data-categories="<%= JSON.stringify(Object.keys(expensesByCategory)) %>" data-amounts="<%= JSON.stringify(Object.values(expensesByCategory)) %>" style="display: none;"></div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Get data from hidden element
    const chartData = document.getElementById('chart-data');
    const categories = JSON.parse(chartData.getAttribute('data-categories'));
    const amounts = JSON.parse(chartData.getAttribute('data-amounts'));
    
    // Colors for the chart - updated to match new color scheme
    const backgroundColors = [
      'rgba(46, 196, 182, 0.8)',  // teal (food) - success
      'rgba(76, 201, 240, 0.8)',  // blue (travel) - info
      'rgba(255, 159, 28, 0.8)',  // orange (housing) - warning
      'rgba(230, 57, 70, 0.8)',   // red (utilities) - danger
      'rgba(67, 97, 238, 0.8)',   // blue (entertainment) - primary
      'rgba(108, 117, 125, 0.8)'  // gray (other) - secondary
    ];
    
    // Create the chart
    const ctx = document.getElementById('expenseChart').getContext('2d');
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: categories.map(cat => cat.charAt(0).toUpperCase() + cat.slice(1)),
        datasets: [{
          data: amounts,
          backgroundColor: backgroundColors,
          borderWidth: 1,
          borderColor: '#ffffff'
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        cutout: '70%',
        plugins: {
          legend: {
            position: 'right',
            labels: {
              boxWidth: 15,
              padding: 15,
              font: {
                size: 12,
                weight: 'bold'
              },
              color: '#2b2d42' // Updated text color
            }
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                const label = context.label || '';
                const value = context.raw || 0;
                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                const percentage = Math.round((value / total) * 100);
                return `${label}: $${value.toFixed(2)} (${percentage}%)`;
              }
            },
            backgroundColor: 'rgba(43, 45, 66, 0.8)', // Updated tooltip background
            padding: 10,
            cornerRadius: 6,
            titleFont: {
              weight: 'bold'
            },
            bodyFont: {
              size: 13
            }
          }
        },
        layout: {
          padding: 10
        },
        animation: {
          animateScale: true,
          animateRotate: true,
          duration: 1000,
          easing: 'easeOutQuart'
        }
      }
    });
  });
</script>

